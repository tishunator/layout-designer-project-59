extends layout.pug

block content
  .container-xxl.row.div(class="md:radius")
    .col-md-4.border-right 
      include components/header.pug

      .tab-content
        .tab-pane.fade.show.active#contacts(role="tabpanel")
          include components/contact.pug

        .tab-pane.fade#chats(role="tabpanel")
          include components/message.pug

        .tab-pane.fade#profile(role="tabpanel")
          include components/profile.pug
    .col-md-8 
      include components/sidebar.pug      
